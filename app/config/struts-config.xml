<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts-config SYSTEM "struts-config.dtd">

<struts-config>

    <!-- ==================================================== Imports =================================================== -->
    <imports>
        <import value="rosasurfer/xtrade/controller/*"/>
        <import value="rosasurfer/xtrade/controller/actions/*"/>
        <import value="rosasurfer/xtrade/controller/forms/*"/>
    </imports>


    <!-- ================================================ Action Mappings =============================================== -->
    <action-mappings>
        <mapping name="home"               path="/"         include=".home"/>
        <mapping name="symbols"            path="/symbols"  include=".home"/>
        <mapping name="history"            path="/history"  include=".home"/>
        <mapping name="login"              path="/login"    include=".home"/>
        <mapping name="contact"            path="/contact"  include=".home"/>
        <mapping name="about"              path="/about"    include=".home"/>
                                                            
        <mapping name="tests.sorted"       path="/sorted"   include=".tests.sorted"/>

        <mapping name="chart.equity"       path="/equity"  form="ViewTestActionForm">
            <forward name="success"  include=".chart.equity"/>
            <forward name="error"    include=".tests.sorted"/>
        </mapping>

        <mapping name="chart.distribution"  path="/distribution"  form="ViewTestActionForm">
            <forward name="success"  include=".chart.distribution"/>
            <forward name="error"    include=".tests.sorted"/>
        </mapping>
        
        <mapping name="chart.bars"          path="/chart/bar"  include=".chart.bars"/>
    </action-mappings>
    
    
    <!-- ===================================================== Tiles ==================================================== -->
    <tiles>
    
        <!-- default layout -->
        <tile name=".default.layout" file="layouts/default.phtml">
            <include name="navigation"  value="tiles/header.phtml"/>                                  
            <include name="content"/>
        </tile>

        
        <!-- views -->
        <tile name=".home"           extends=".default.layout">
           <include name="content"   value="tiles/home.phtml"/>
        </tile>                      
                                     
        <tile name=".tests.sorted"   extends=".default.layout">
            <include name="content"  value="tiles/tests.sorted.phtml"/>
        </tile>
        <tile name=".chart.equity"    extends=".default.layout">
            <include name="content"  value="tiles/charts/line.phtml"/>
        </tile>                      
        <tile name=".chart.distribution"  extends=".default.layout">
            <include name="content"  value="tiles/charts/scatter.phtml"/>
        </tile>                      
                                     
        <tile name=".chart.bars"     extends=".default.layout">
            <include name="content"  value="tiles/charts/bar.phtml"/>
        </tile>                         
    </tiles>

</struts-config>
