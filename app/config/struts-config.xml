<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts-config SYSTEM "struts-config.dtd">

<struts-config file-base="app/view">

    <!-- =================================================== Imports ==================================================== -->
    <imports>
        <import value="rosasurfer/xtrade/controller/actions/*"/>
        <import value="rosasurfer/xtrade/controller/forms/*"/>
    </imports>


    <!-- ================================================ Global Forwards =============================================== -->
    <global-forwards>
        <forward name="home"          include=".default"/>
        <forward name="redirect.home" redirect="/"/>
    </global-forwards>
    
    
    <!-- ================================================ Action Mappings =============================================== -->
    <action-mappings>
        <mapping path="/"  forward="home" />
        
        <mapping path="/uploadAccountHistory"  form="UploadAccountHistoryActionForm"  action="UploadAccountHistoryAction"  http-methods="get,post">
            <forward name="default"  include=".uploadAccountHistory"/>
        </mapping>
        
        <mapping path="/uploadFTPConfiguration"    form="UploadFTPConfigurationActionForm"    action="UploadFTPConfigurationAction"  http-methods="post" />
        <mapping path="/downloadFTPConfiguration"  form="DownloadFTPConfigurationActionForm"  action="DownloadFTPConfigurationAction" />
    </action-mappings>
    
    
    <!-- ===================================================== Tiles ==================================================== -->
    <tiles>
        <tile name=".default"               file="tiles/default.phtml"             />
        <tile name=".uploadAccountHistory"  file="tiles/uploadAccountHistory.phtml"/>
    </tiles>

</struts-config>
