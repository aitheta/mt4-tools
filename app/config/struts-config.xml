<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts-config SYSTEM "struts-config.dtd">

<struts-config>

    <!-- ==================================================== Imports =================================================== -->
    <imports>
        <import value="rosasurfer/xtrade/controller/*"/>
        <import value="rosasurfer/xtrade/controller/actions/*"/>
        <import value="rosasurfer/xtrade/controller/forms/*"/>
    </imports>


    <!-- ================================================ Action Mappings =============================================== -->
    <action-mappings>
        <mapping name="home"           path="/"         include=".home"/>
        <mapping name="symbols"        path="/symbols"  include=".home"/>
        <mapping name="history"        path="/history"  include=".home"/>
                                       
        <mapping name="test.list"      path="/tests"    include=".test.list"/>
        <mapping name="test.detail"    path="/test"  form="ViewTestActionForm">
            <forward name="success"  include=".test.detail"/>
            <forward name="error"    include=".test.list"/>
        </mapping>
        
        <mapping name="login"          path="/login"    include=".home"/>
        <mapping name="contact"        path="/contact"  include=".home"/>
        <mapping name="about"          path="/about"    include=".home"/>
        
        <mapping name="chart.bar"      path="/chart/bar"      include=".chart.bar"/>
        <mapping name="chart.scatter"  path="/chart/scatter"  include=".chart.scatter"/>
    </action-mappings>
    
    
    <!-- ===================================================== Tiles ==================================================== -->
    <tiles namespace="rosasurfer/xtrade/view">
    
        <!-- default layout -->
        <tile name=".default.layout" file="layouts/default.phtml">
            <include name="navigation"  value="tiles/header.phtml"/>                                  
            <include name="content"/>
        </tile>

        
        <!-- views -->
        <tile name=".home"           extends=".default.layout">
           <include name="content"   value="tiles/home.phtml"/>
        </tile>

        <tile name=".test.list"      extends=".default.layout">
            <include name="content"  value="tiles/test.list.phtml"/>
        </tile>
        <tile name=".test.detail"    extends=".default.layout">
            <include name="content"  value="tiles/charts/scatter.phtml"/>
        </tile>

        <tile name=".chart.bar"      extends=".default.layout">
            <include name="content"  value="tiles/charts/bar.phtml"/>
        </tile>
        <tile name=".chart.scatter"  extends=".default.layout">
            <include name="content"  value="tiles/charts/scatter.phtml"/>
        </tile>
    </tiles>

</struts-config>
