<?xml version="1.0" encoding="iso-8859-15"?>
<!DOCTYPE struts-config SYSTEM "struts-config.dtd">

<struts-config view-base="src/WEB-INF/include">


   <!-- ============================================= Global Forwards ============================================= -->
   <global-forwards>
      <forward name="home"          include=".default"   />
      <forward name="redirect.home" redirect="/index.php"/>
   </global-forwards>


   <!-- ============================================= Action Mappings ============================================= -->
   <action-mappings>
      <mapping path="/index.php"  forward="home"/>

      <mapping path="/uploadAccountHistory.php"  form="UploadAccountHistoryActionForm"  action="UploadAccountHistoryAction"  methods="get,post">
         <forward name="default"  include=".uploadAccountHistory"/>
      </mapping>

      <mapping path="/uploadFTPConfiguration.php"  form="UploadFTPConfigurationActionForm"  action="UploadFTPConfigurationAction"  methods="post">
      </mapping>
      <mapping path="/downloadFTPConfiguration.php"  form="DownloadFTPConfigurationActionForm"  action="DownloadFTPConfigurationAction">
      </mapping>
   </action-mappings>


   <!-- ================================================== Tiles ================================================== -->
   <tiles>
      <tile name=".default" 					path="html/default.html"             />
		<tile name=".uploadAccountHistory"  path="html/uploadAccountHistory.html"/>
   </tiles>

</struts-config>
